<%- include('header') %>

    <div class="container">
        <form action="" method="POST" role="form" id="category_form">
            <legend>Form chỉnh sửa danh mục</legend>
            <div class="form-group">
                <label for="">Tên danh mục</label>
                <input type="text" class="form-control" name="name" value="<%= data.name%>">
                <small id="name_error" class="text-danger"></small>
            </div>
            <!-- <div class="form-group">
                <label for="">Trạng thái danh mục</label>
                <div class="radio">
                    <label>
                        <input type="radio" name="status" value="1" <%=data.status==1 ? 'checked' : '' %>>
                        Hiển thị
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="status" value="0" <%=data.status==0 ? 'checked' : '' %>>
                        Tạm ẩn
                    </label>
                </div>
            </div> -->
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </form>
    </div>

    <%- include('footer') %>

        <script>
            category_form.onsubmit = function () {
                if (category_form.name.value == '') {
                    category_form.name.style.border = '1px solid red';
                    name_error.innerHTML = 'Không được để trống tên';
                    category_form.name.focus();
                    return false;
                } else {
                    name_error.innerHTML = '';
                    category_form.name.style.border = '1px solid lightblue';
                }
            }
        </script>